{
  "database": {
    "rules": "database.rules.json"
  },
  "functions": {
    "source": "functions"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      ".github",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/function/register_user",
        "function": "registerEmail"
      },
      {
        "source": "/function/validate_email",
        "function": "validateEmail"
      },
      {
        "source": "/*",
        "function": "getUserData"
      }
    ]
  },
  "emulators": {
    "database": {
      "host": "localhost",
      "port": 9000
    },
    "functions": {
      "host": "localhost",
      "port": 5001
    },
    "hosting": {
      "host": "localhost",
      "port": 5000
    }
  }
}
